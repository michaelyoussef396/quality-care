# Production Environment Variables
# TASK-026: Production build configuration

# Application
NODE_ENV=production
VITE_APP_NAME="Quality Care - Professional NDIS Services"
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=https://api.qualitycareproviders.com.au
VITE_CONTACT_API_ENDPOINT=/api/contact

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_GOOGLE_TAG_MANAGER_ID=GTM_CONTAINER_ID

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true

# SEO Configuration
VITE_SITE_URL=https://qualitycareproviders.com.au
VITE_SITE_NAME="Quality Care Providers"
VITE_SITE_DESCRIPTION="Professional NDIS services across Australia. Supporting individuals with disabilities to live with dignity and independence."

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_SW_ENABLED=true

# Security
VITE_CSP_ENABLED=true
VITE_SECURITY_HEADERS_ENABLED=true

# Image Optimization
VITE_IMAGE_OPTIMIZATION_ENABLED=true
VITE_WEBP_ENABLED=true
VITE_LAZY_LOADING_ENABLED=true

# Caching
VITE_CACHE_STRATEGY=aggressive
VITE_CACHE_VERSION=v1

# External Services
VITE_BUILDER_IO_API_KEY=your_builder_io_api_key
VITE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration (Server-side)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@qualitycareproviders.com.au
SMTP_PASS=your_email_password

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/qualitycare

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/qualitycare/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://qualitycareproviders.com.au
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE"
CORS_CREDENTIALS=true